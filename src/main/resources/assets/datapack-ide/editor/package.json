{
  "name": "codemirror-spyglass-editor",
  "version": "1.0.0",
  "description": "CodeMirror editor with Spyglass direct integration",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.js src/editor.js --bundle --outdir=dist --format=esm --platform=browser --target=es2022 --splitting",
    "build:watch": "npm run build -- --watch",
    "dev": "npm run build:watch & npx http-server -p 8000"
  },
  "dependencies": {
    "@codemirror/view": "^6.38.6",
    "@codemirror/state": "^6.5.2",
    "@codemirror/language": "^6.11.3",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/search": "^6.5.11",
    "@codemirror/autocomplete": "^6.19.1",
    "@codemirror/lint": "^6.9.1",
    "@spyglassmc/core": "^0.4.37",
    "@spyglassmc/java-edition": "^0.3.49",
    "@spyglassmc/json": "^0.3.41",
    "@spyglassmc/mcfunction": "^0.2.40",
    "@spyglassmc/mcdoc": "^0.3.41",
    "thememirror": "^2.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.2"
  }
}