{
	"schemaVersion": 1,
	"id": "datapack-ide",
	"version": "${version}",
	"name": "DataPack IDE",
	"description": "Allows in game data pack editing with a built in text editor screen.",
	"authors": [
		"Frostzie"
	],
	"contributors": [
		"Arttale",
		"Huckle"
	],
	"contact": {
		"homepage": "https://github.com/Frostzie/Datapack-IDE",
		"sources": "https://github.com/Frostzie/Datapack-IDE",
		"issues": "https://github.com/Frostzie/Datapack-IDE/issues"
	},
	"license": "LGPL-2.1",
	"icon": "assets/datapack-ide/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "io.github.frostzie.datapackide.DataPackIDE",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"datapack-ide.mixins.json"
	],
	"depends": {
		"fabricloader": "*",
		"minecraft": "*",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	},
	"custom": {
		"modmenu": {
			"links": {
				"modmenu.discord": "https://discord.gg/qZ885qTvkx"
			}
		}
	}
}